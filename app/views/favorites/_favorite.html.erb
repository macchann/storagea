<% if user_signed_in? %>
  <% if item.favorite_user(current_user.id) %>
    <%= button_to item_favorite_path(favorite, item_id: item.id), method: :delete, id: "favorite-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= item.favorite_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to item_favorites_path(item), id: "favorite-button", remote: true do %>
      <%= image_tag("icon_heart.svg") %>
      <span>
        <%= item.favorite_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <% = image_tag("icon_heart.svg") %>
    <span>
      <%= item.favorite_count %>
    </span>
<% end %>