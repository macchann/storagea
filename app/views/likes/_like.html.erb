
  <% if current_user.likes.find_by(item_id: item.id) %>
    <%= link_to unlike_path(item.id), :id => "like-link-#{item.id}", method: :delete, remote: true do %>
    <button type="button" class="btn btn-default" aria-label="Left Align"><%= image_tag("icon_red_heart.svg", :size => "16x16")%></span><%= item.likes.count.to_s %></button>
   <% end %>
    <% else %>
      <%= link_to like_path(item.id), :id => "like-link-#{item.id}", method: :post, remote: true do %>
      <button type="button" class="btn btn-default" aria-label="Left Align"><%= image_tag("icon_heart.svg", :size => "16x16")%></span><%= item.likes.count.to_s %></button>
    <% end %>
  <% end %>